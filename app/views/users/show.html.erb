<div class="col-md-4 col-md-offset-1">
  <%= image_tag @user.image, size: "200" %>
</div>

<div class="col-md-7">
<h1>NickName: <%= @user.nickname %></h1>
<h3><%= @user.nickname %>'s Post</h3>
<% @user.posts.each do |post| %>
  <%= link_to post.tagline, city_post_path(post.city, post)  %>
<% end %>  
<h3><%= @user.nickname %>'s Comments</h3>
</div>