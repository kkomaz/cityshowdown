<div class="panel panel-default col-md-5 post">
  <p class="becca1 subtext"><%= "Category: " + post.category.name if post.category %></p>
  <p class="becca2 subtext"><%= link_to "Expand", city_post_path(@city, post) %></p>
  <div class="panel-body">
  <% if post.image_file_name != nil %>
    <%= link_to (image_tag post.image.url, :width => '100%'), city_post_path(@city, post) if post.image %>
  <% else %>
    <%= link_to (image_tag post.instagram_pic, :width => '100%'), city_post_path(@city, post) if post.instagram_pic %>
  <% end %>
  	<p class="tagline clear">&ldquo;<%= post.tagline %>&rdquo;</p>
  	<hr>
    <p class="subtext"> Submitted by <%= link_to post.user.nickname, user_path(post.user) %></p>
    <p><%= image_tag post.user.image, size: "60" %></p>
  </div>
</div>