<center><h1><%= @city.name %></h1></center>
<h2>All posts in category "<%= @category.name %>"</h2>

<div class='categories center'>| <%= link_to "All", city_path(@city) %>
|<% @categories.each do |c| %>
  <%= link_to c.name, city_category_path(@city, c) %> |
<% end %>
</div>

<% if logged_in? %>
  <%= link_to 'Write a new post', new_city_post_path(@city) %> <br>
  <%= link_to 'Back', root_path %>
  <% else %>
  <%= link_to 'Back', root_path %>
<% end %>

<%= render 'posts' %>