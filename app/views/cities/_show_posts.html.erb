<div class="box panel panel-default">
  <p><%= link_to post.tagline, city_post_path(@city, post) %></p>
  <p><%= "Category: " + post.category.name if post.category %></p>
  <div class="panel-body">
    <%= link_to (image_tag post.image.url), city_post_path(@city, post) %>
    <%= link_to (image_tag post.instagram_pic), city_post_path(@city, post) if post.instagram_pic %>
    <p> Submitted by <%= link_to post.user.nickname, user_path(post.user) %></p>
    <p><%= image_tag post.user.image, size: "60" %></p>
  </div>
</div>