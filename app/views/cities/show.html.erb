<%= link_to 'Back to Cities', root_path %>

<center><h1><%= @city.name %></h1></center>

<div class="center">
	<div class='categories'>| <%= link_to "All", city_path(@city) %>
	|<% @categories.each do |c| %>
		<%= link_to c.name, city_category_path(@city, c) %> |
	<% end %>
	</div>

	<% if logged_in? %>
	  <%= link_to 'New post', new_city_post_path(@city), :class => "btn btn-info" %> <br>
	<% end %>
</div>

<h2>Score PLACEHOLDER</h2>
<h3><%= (@city.posts.where(:posts => {:pro_or_con => 1})).length %> pro posts : <%= (@city.posts.where(:posts => {:pro_or_con => 0})).length %> con posts</h3>

<%= render 'posts' %>