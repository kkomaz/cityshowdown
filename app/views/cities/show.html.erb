<center><h1><%= @city.name %></h1></center>
<div id="posts">
  <% @city.posts.each do |post| %>
    <div class="box panel panel-default">
      <%= link_to post.tagline, city_post_path(@city, post) %>
      <div class="panel-body">
        <%= link_to (image_tag post.image.url), city_post_path(@city, post) %>
        <p> Submitted by <%= link_to post.user.name, user_path(post.user) %></p>
      </div>
    </div>
  <% end %>

  <% if logged_in? %>
  <%= link_to 'Write a new post', new_city_post_path(@city) %> <br>
  <%= link_to 'Back', root_path %>
  <% else %>
  <%= link_to 'Back', root_path %>
  <% end %>
</div>
